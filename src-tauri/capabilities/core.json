{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "core-capability",
  "description": "核心功能权限，包括窗口、事件和应用操作",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:window:default",
    "core:window:allow-close",
    "core:window:allow-hide",
    "core:window:allow-show",
    "core:window:allow-set-focus",
    "core:event:default",
    "core:app:default"
  ]
}
